{
  "name": "lobster-sage",
  "version": "0.1.0",
  "description": "Autonomous OpenClaw agent for predictions and yield farming on Base",
  "main": "dist/index.js",
  "scripts": {
    "build": "tsc",
    "dev": "tsx watch src/index.ts",
    "start": "node dist/index.js",
    "api": "tsx src/api/server.ts",
    "api:watch": "tsx watch src/api/server.ts",
    "test": "vitest",
    "test:run": "vitest run",
    "lint": "eslint src/**/*.ts",
    "format": "prettier --write \"src/**/*.ts\"",
    "compile:contracts": "hardhat compile",
    "deploy:sepolia": "hardhat run scripts/deploy-sepolia.ts --network baseSepolia",
    "deploy:mainnet": "hardhat run scripts/deploy.ts --network baseMainnet",
    "verify": "hardhat verify"
  },
  "keywords": [
    "openclaw",
    "base",
    "defi",
    "agent",
    "prediction",
    "yield"
  ],
  "author": "kcpele",
  "license": "MIT",
  "dependencies": {
    "@coinbase/agentkit": "^0.10.4",
    "@coinbase/cdp-agentkit-core": "^0.0.13",
    "@coinbase/cdp-langchain": "^0.0.14",
    "@openzeppelin/contracts": "^5.4.0",
    "cors": "^2.8.5",
    "dotenv": "^16.4.5",
    "ethers": "^6.13.0",
    "express": "^4.21.0",
    "viem": "^2.21.0",
    "zod": "^3.23.8"
  },
  "devDependencies": {
    "@types/cors": "^2.8.17",
    "@types/express": "^4.17.21",
    "@nomicfoundation/hardhat-ignition": "^0.15.16",
    "@nomicfoundation/hardhat-ignition-viem": "^0.15.16",
    "@nomicfoundation/hardhat-network-helpers": "^1.1.2",
    "@nomicfoundation/hardhat-toolbox-viem": "^3.0.0",
    "@nomicfoundation/hardhat-verify": "^2.0.0",
    "@nomicfoundation/hardhat-viem": "^2.1.3",
    "@nomicfoundation/ignition-core": "^0.15.15",
    "@types/chai": "^4.3.20",
    "@types/chai-as-promised": "^7.1.8",
    "@types/mocha": "^10.0.10",
    "@types/node": "^22.5.0",
    "@typescript-eslint/eslint-plugin": "^8.3.0",
    "@typescript-eslint/parser": "^8.3.0",
    "chai": "^4.5.0",
    "eslint": "^9.9.0",
    "hardhat": "^2.22.0",
    "hardhat-gas-reporter": "^1.0.10",
    "prettier": "^3.3.0",
    "solidity-coverage": "^0.8.17",
    "ts-node": "^10.9.2",
    "tsx": "^4.19.0",
    "typescript": "^5.5.0",
    "vitest": "^2.1.9"
  },
  "engines": {
    "node": ">=20.0.0"
  }
}
